<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.screen3.Screen3"
    >

  <!-- TODO: Update blank fragment layout -->
  <RadioGroup
      android:id="@+id/radio_group"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="24dp"
      android:orientation="vertical"
      app:layout_constraintEnd_toEndOf="@+id/radio_title"
      app:layout_constraintStart_toStartOf="@+id/radio_title"
      app:layout_constraintTop_toBottomOf="@+id/radio_title"
      >
    <RadioButton
        android:id="@+id/radio_celcius"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Celcius"
        />
    <RadioButton
        android:id="@+id/radio_fahrenheit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Farenheit"
        />

  </RadioGroup>
  <TextView
      android:id="@+id/radio_title"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="24dp"
      android:text="@string/hello_blank_fragment"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />

</androidx.constraintlayout.widget.ConstraintLayout>